{
  "files.eol": "\n",
  "files.encoding": "utf8",

  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // To prevent misdetection of indent size
  "[typescript]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  /**
   * UI/DX関係
   */
  "workbench.colorTheme": "Default Dark+",
  "search.exclude": {
    "**/dist": true
  },
  "files.watcherExclude": {
    "**/dist/*": true
  },

  /**
   * Extensions
   */
  /** dbaeumer.vscode-eslint */
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ]
}
